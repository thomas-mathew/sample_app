<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if @user.admin? %>
        (Admin)
        <% end %>
      </h1>
      <h2><%= @user.email %></h2>
      <% if @user.profile.blank? %>
      <p>Write a <%= link_to "description", edit_user_path(current_user) %> about yourself</p>
      <% else %>
      <p><%= @user.profile %></p>
      <% end %>
      <% if @user.admin? %>
      <p>Create an <%= link_to "election", new_election_path %></p>
      <% end %>
    </section>
  </aside>
</div>