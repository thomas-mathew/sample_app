<% provide(:title, 'New Election') %>
<h1>Create a New Election</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@election) do |f| %>
      <%= render 'shared/error_messages2' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 3%>

      <%= f.submit "Create an election", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>